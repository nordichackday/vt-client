@import "nib";

global-reset();

html {
  font-size: 62.5%;
  font-family: 'HelveticaNeue-Medium';
  -webkit-font-smoothing: antialiased;
}

body {
  line-height: 1.5;
}

html,
body,
.page,
.story {
  height: 100%;
}

video {width: 100%;}

.media-viewer {
  position: fixed;
  top: 0;
  left: 0;
  right: 400px;
  bottom: 0;
  background: #ddd;
  z-index: 10;
  box-shadow: 0 0 30px rgba(0, 0, 0, .25);
}

.media-viewer #map {
  position: absolute;
  width: 100%;
  height: 100%;
}

.media--image {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

.media--image img {
  width: 100%;
}

.timeline {
  position: absolute;
  width: 400px;
  right: 0;
  top: 0;
  background: #fff;
  z-index: 9;
}

.timeline--title {
  font-size: 20px;
  padding: 20px 20px 10px;
}

.timeline--intro {
  font-size: 14px;
  padding: 5px 20px 20px;
}

.timeline--nodes {
  // border-top: 1px solid rgba(0, 0, 0, .05);
}

.timeline--node {
  // font-size: 14px;
  position: relative;
  padding: 14px 20px 20px 60px;
  // border-bottom: 1px solid rgba(0, 0, 0, .05);
}

.timeline--node:hover {
  background: #def;
}

.timeline--node-label {
  font-size: 12px;
  display: inline-block;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  margin: 0 0 10px;
}

.timeline--node-intro {
  font-size: 16px;
}

.timeline--node-body {
  font-size: 14px;
  margin: 10px 0 0;
}

.timeline--node:before {
  display: block;
  content: '';
  position: absolute;
  top: 0;
  left: 30px;
  bottom: 0;
  width: 2px;
  background: rgba(0, 0, 0, .1);
  z-index: 10;
  pointer-events: none;
}

.timeline--node:after {
  border-radius: 50%;
  width: 4px;
  height: 4px;
  content: '';
  position: absolute;
  top: 21px;
  left: 27px;
  background: #fff;
  pointer-events: none;
  z-index: 11;
  border: 2px solid #000;
}

.timeline--node.is-active:after {
  background: #fff;
  width: 10px;
  height: 10px;
  top: 17px;
  left: 23px;
  border: 3px solid #000;
}

.timeline--node.is-active {
  // background: #00f;
}

@media (max-width: 720px) {
  .media-viewer {
    top: 0;
    left: 0;
    right: 0;
    bottom: 50%;
  }

  .timeline {
    top: 50%;
    width: 100%;
  }
}


